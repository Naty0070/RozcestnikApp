@model Section

<form method="post" asp-action="DeleteSec">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Smazat Odkaz</h2>
            <hr />
        </div>
        <input asp-for="Id" hidden></>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Smaž</button>
        <a asp-controller="Section" asp-action="Admin" class="btn btn-secondary" style="width:150px">
            Zpět na rozcestník
        </a>
    </div>
</form>


